@page
@model WasteCollectionSystem.Pages.Admin.DashboardModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-hero mb-4">
    <div class="container py-4">
        <div class="d-flex align-items-center">
            <div class="hero-icon me-3"><i class="fa-solid fa-shield-halved"></i></div>
            <div>
                <h1 class="hero-title mb-1">Admin Panel</h1>
                <p class="hero-subtitle mb-0">Welcome, @(Model.CurrentAdmin?.FullName ?? "Admin")</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card stat-card card-lift h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-success-subtle text-success me-3"><i class="fa-solid fa-users"></i></div>
                    <div><div class="stat-label">Total Users</div><div class="stat-value">@Model.TotalUsers</div></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card stat-card card-lift h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-info-subtle text-info me-3"><i class="fa-solid fa-id-badge"></i></div>
                    <div><div class="stat-label">Drivers</div><div class="stat-value">@Model.DriversCount</div></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card stat-card card-lift h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-warning-subtle text-warning me-3"><i class="fa-solid fa-truck"></i></div>
                    <div><div class="stat-label">Trucks</div><div class="stat-value">@Model.TrucksCount</div></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card stat-card card-lift h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-warning-subtle text-warning me-3"><i class="fa-solid fa-hourglass-half"></i></div>
                    <div><div class="stat-label">Pending Requests</div><div class="stat-value">@Model.PendingRequests</div></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card stat-card card-lift h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-success-subtle text-success me-3"><i class="fa-solid fa-check-circle"></i></div>
                    <div><div class="stat-label">Todayâ€™s Collections</div><div class="stat-value">@Model.TodaysCollections</div></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card stat-card card-lift h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-success-subtle text-success me-3"><i class="fa-solid fa-dollar-sign"></i></div>
                    <div><div class="stat-label">Total Revenue</div><div class="stat-value">$@Model.TotalRevenue.ToString("F2")</div></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 d-flex align-items-center">
            <i class="fa-solid fa-chart-line text-success me-2"></i>
            <span class="fw-semibold">Requests This Month</span>
        </div>
        <div class="card-body">
            <canvas id="reqChart" height="120"></canvas>
        </div>
    </div>

    <div class="d-flex flex-wrap gap-2 mb-4">
        <a class="btn btn-success btn-lift" href="#"><i class="fa-solid fa-truck-medical me-2"></i>Add Truck</a>
        <a class="btn btn-outline-success btn-lift" href="#"><i class="fa-solid fa-clipboard-list me-2"></i>View All Requests</a>
        <a class="btn btn-outline-success btn-lift" href="#"><i class="fa-solid fa-user-gear me-2"></i>Manage Users</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 d-flex align-items-center">
            <i class="fa-solid fa-clock-rotate-left text-success me-2"></i>
            <span class="fw-semibold">Recent Requests</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.RecentRequests)
                    {
                        <tr>
                            <td class="fw-semibold">#@r.RequestID</td>
                            <td>@(r.User?.DisplayName ?? r.UserId)</td>
                            <td>@r.RequestDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@r.Location</td>
                            <td>@r.WasteType</td>
                            <td><span class="@Model.GetStatusBadgeClass(r.Status)">@r.Status</span></td>
                            <td class="text-end">
                                <form method="post" asp-page-handler="Assign" class="d-inline">
                                    <input type="hidden" name="requestId" value="@r.RequestID" />
                                    <button class="btn btn-sm btn-success btn-lift"><i class="fa-solid fa-truck me-1"></i>Assign</button>
                                </form>
                                <form method="post" asp-page-handler="Reject" class="d-inline ms-2">
                                    <input type="hidden" name="requestId" value="@r.RequestID" />
                                    <button class="btn btn-sm btn-outline-danger btn-lift"><i class="fa-solid fa-xmark me-1"></i>Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (async function () {
            const ctx = document.getElementById('reqChart');
            let chart;
            async function load() {
                const res = await fetch('/api/admin/requests-by-day', { credentials: 'include' });
                if (!res.ok) return;
                const data = await res.json();
                const labels = data.map(d => d.day);
                const values = data.map(d => d.count);
                const ds = { label: 'Requests', data: values, borderColor: '#1a5f3d', backgroundColor: 'rgba(26,95,61,0.15)' };
                if (!chart) {
                    chart = new Chart(ctx, { type: 'line', data: { labels, datasets: [ds] }, options: { responsive: true, plugins: { legend: { display: false } } } });
                } else {
                    chart.data.labels = labels; chart.data.datasets[0].data = values; chart.update();
                }
            }
            await load();
            setInterval(load, 15000);
        })();
    </script>
}

<style>
    .admin-hero { background: linear-gradient(135deg, #0f3c27 0%, #1a5f3d 100%); color: #fff; border-bottom-left-radius: 1rem; border-bottom-right-radius: 1rem; }
    .hero-icon i { font-size: 2rem; }
    .hero-title { font-weight: 800; letter-spacing: .2px; }
    .hero-subtitle { opacity: .9; }
    .stat-card { border: 0; box-shadow: 0 6px 18px rgba(0,0,0,.06); }
    .stat-icon { width: 48px; height: 48px; border-radius: .75rem; display: inline-flex; align-items: center; justify-content: center; font-size: 1.25rem; }
    .stat-label { font-size: .875rem; color: #6c757d; }
    .stat-value { font-size: 1.35rem; font-weight: 700; }
    .card-lift { transition: transform .2s ease, box-shadow .2s ease; }
    .card-lift:hover, .btn-lift:hover { transform: translateY(-2px); box-shadow: 0 12px 24px rgba(0,0,0,.08); }
    .bg-success-subtle { background-color: #e9f7ef; }
    .bg-info-subtle { background-color: #cff4fc; }
    .bg-warning-subtle { background-color: #fff3cd; }
    .bg-orange { background-color: #fd7e14; color: #fff; }
</style>
