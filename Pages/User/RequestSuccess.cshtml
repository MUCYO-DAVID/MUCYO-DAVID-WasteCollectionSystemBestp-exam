@page
@model WasteCollectionSystem.Pages.User.RequestSuccessModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 text-center">
            <div class="success-anim mb-3">
                <div class="checkmark">
                    <svg viewBox="0 0 52 52" class="checkmark-svg">
                        <circle cx="26" cy="26" r="25" fill="none" class="checkmark-circle" />
                        <path fill="none" d="M14 27 l8 8 l16 -16" class="checkmark-path" />
                    </svg>
                </div>
            </div>
            <h2 class="fw-bold mb-2">Request Submitted</h2>
            <p class="text-muted mb-4">Your waste will be collected soon! Track status in History.</p>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3 text-start">
                        <div class="col-12 col-md-6">
                            <div class="small text-muted">Request ID</div>
                            <div class="fw-semibold">#@Model.CurrentRequest.RequestID</div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="small text-muted">Date</div>
                            <div class="fw-semibold">@Model.CurrentRequest.RequestDate.ToString("yyyy-MM-dd HH:mm")</div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="small text-muted">Location</div>
                            <div class="fw-semibold">@Model.CurrentRequest.Location</div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="small text-muted">Waste Type</div>
                            <div class="fw-semibold">@Model.CurrentRequest.WasteType</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <a class="btn btn-success btn-lift" asp-page="/User/UserDashboard">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to Dashboard
                </a>
                <a class="btn btn-outline-success btn-lift" asp-page="/User/History">
                    <i class="fa-solid fa-list-ul me-2"></i>View History
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .success-anim { display: inline-block; }
    .checkmark-svg { width: 92px; height: 92px; }
    .checkmark-circle { stroke: #2c8558; stroke-width: 3; stroke-dasharray: 166; stroke-dashoffset: 166; animation: circle 0.6s ease forwards; }
    .checkmark-path { stroke: #2c8558; stroke-width: 5; stroke-linecap: round; stroke-linejoin: round; stroke-dasharray: 48; stroke-dashoffset: 48; animation: check 0.4s 0.3s ease forwards; }
    @@keyframes circle { to { stroke-dashoffset: 0; } }
    @@keyframes check { to { stroke-dashoffset: 0; } }
    .btn-lift { transition: transform .2s ease, box-shadow .2s ease; }
    .btn-lift:hover { transform: translateY(-2px); box-shadow: 0 10px 24px rgba(0,0,0,.08); }
</style>
