@page
@model WasteCollectionSystem.Pages.SelectLanguageModel
@{
    ViewData["Title"] = "Select Language";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="mb-4">Select Your Language</h1>
            <p class="lead mb-5">Please choose your preferred language to continue to the chat.</p>
            
            <div class="d-grid gap-3">
                <form method="post" class="d-grid gap-3">
                    <button type="submit" name="culture" value="en" class="btn btn-outline-primary btn-lg p-4">
                        <i class="fas fa-flag-usa me-2"></i> English
                    </button>
                    <button type="submit" name="culture" value="fr" class="btn btn-outline-primary btn-lg p-4">
                        <i class="fas fa-flag-checkered me-2"></i> Fran√ßais
                    </button>
                     <button type="submit" name="culture" value="rw" class="btn btn-outline-primary btn-lg p-4">
                        <i class="fas fa-globe-africa me-2"></i> Ikinyarwanda
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
