@page
@model WasteCollectionSystem.Pages.TeamModel
@{
    ViewData["Title"] = "Meet the Team";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-success">Meet Our Team</h1>
        <p class="lead text-muted">The minds behind WasteCollectionSystem</p>
    </div>

    <!-- CTO Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-lg text-center h-100 transform-hover">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto overflow-hidden" style="width: 150px; height: 150px;">
                            <!-- Image with fallback -->
                            <img src="" alt="Mucyo David" class="w-100 h-100 object-fit-cover" 
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                            <i class="fas fa-user-tie fa-4x text-muted" style="display:none;"></i>
                            <!-- Initial state if image missing (JS handles it, but for server side rendering basic fallback) -->
                            <script>document.currentScript.previousElementSibling.previousElementSibling.onerror();</script>
                        </div>
                    </div>
                    <h3 class="fw-bold mb-1">Mucyo David</h3>
                    <p class="text-success fw-semibold mb-3">CTO & Lead Developer</p>
                    <p class="text-muted small px-3">Leading the technical vision and architecture of WasteCollectionSystem.</p>
                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <a href="https://www.linkedin.com/in/MucyoDavid" target="_blank" class="text-muted hover-success"><i class="fab fa-linkedin fa-lg"></i></a>
                        <a href="https://github.com/MucyoDavid" target="_blank" class="text-muted hover-success"><i class="fab fa-github fa-lg"></i></a>
                        <a href="mailto:mucyobecks@gmail.com" class="text-muted hover-success"><i class="fas fa-envelope fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>


<style>
    .transform-hover {
        transition: transform 0.3s ease;
    }
    .transform-hover:hover {
        transform: translateY(-5px);
    }
</style>
